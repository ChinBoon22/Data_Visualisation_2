{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "padding": { "left": 10, "top": 0, "bottom": -120 },
  "autosize": "pad",
  "signals": [
    {
      "name": "clear",
      "value": true,
      "on": [
        {
          "events": "pointerup[!event.item]",
          "update": "true",
          "force": true
        }
      ]
    },
    {
      "name": "shift",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click, @bubble:click",
          "update": "event.shiftKey",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": { "value": null, "counter": 0, "clicked": false },
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click, @bubble:click",
          "update": "!(clicked.counter >1) && clicked.clicked!==true?{value: datum.country, air_quality_condition: datum.air_quality_condition, health_risk: datum.human_health_risk, remarks: datum.remark, counter:datum.country===clicked.country ?clicked.counter+1:1, clicked:clicked.counter%2===0||datum.country!==clicked.country? true:false}:false",
          "force": false
        }
      ]
    },
    {
      "name": "title",
      "value": "U.S. Airports, 2008",
      "update": "clicked ? clicked.value : ''"
    },
    {
      "name": "air_quality_condition",
      "value": "None",
      "update": "clicked ? clicked.air_quality_condition : ''"
    },
    {
      "name": "health_risk",
      "value": "None",
      "update": "clicked ? clicked.health_risk : ''"
    },
    {
      "name": "remarks",
      "value": "None",
      "update": "clicked ? clicked.remarks : ''"
    },
    {
      "name": "country_title",
      "value": "Country: "
    },
    {
      "name": "air_quality_condition_title",
      "value": "Air Quality: "
    },
    {
      "name": "health_risk_title",
      "value": "Health Risk: "
    },
    {
      "name": "remarks_title",
      "value": "Reason: "
    },
    {
      "name": "w",
      "value": 100
    },
    {
      "name": "h",
      "value": 100
    },
    {
      "name": "cornerRadius",
      "value": 0
    },
    {
      "name": "strokeWidth",
      "value": 4
    },
    {
      "name": "color",
      "value": "both"
    }
  ],
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/ChinBoon22/Data_Visualisation_2/main/Dataset/aggregated_weather4.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "selected",
      "on": [
        { "trigger": "clear", "remove": true },
        { "trigger": "!shift", "remove": true },
        { "trigger": "!shift && clicked", "insert": "clicked" },
        { "trigger": "shift && clicked", "toggle": "clicked" }
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": [110, 10100]
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": ["#FAD5A5", "#FFA500", "#F08000", "#FF7518", "#8B4000"]
    },
    {
      "name": "text",
      "type": "ordinal",
      "domain": {
        "data": "table",
        "field": "country"
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "size": "size",
      "clipHeight": 16,
      "title": "Carbon Monoxide Level",
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true
        },
        "labels": {
          "name": "legendLabel",
          "text": {
            "field": "value"
          },
          "interactive": true
        }
      },
      "orient": "top-right",
      "titlePadding": 10,
      "offset": -80
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "name": "bubble",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "tooltip": {
            "signal": "{'Country': datum.country, 'Carbon Monoxide Level': datum.air_quality_Carbon_Monoxide}"
          }
        },
        "update": {
          "size": {
            "field": "air_quality_Carbon_Monoxide",
            "scale": "size"
          },
          "fill": {
            "field": "air_quality_Carbon_Monoxide",
            "scale": "color"
          },
          "stroke": [
            {
              "test": "((indata('selected', 'value', datum.country)))",
              "value": "black",
              "zindex": 10
            },
            {
              "value": "white"
            }
          ],

          "strokeWidth": {
            "value": 1
          },
          "fillOpacity": [
            {
              "test": "((indata('selected', 'value', datum.country)))",
              "value": 1.0
            },
            {
              "value": 1.0
            }
          ]
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {
              "force": "collide",
              "radius": {
                "expr": "sqrt(datum.size) / 2"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "rect",
      "encode": {
        "enter": {
          "stroke": { "value": "grey" }
        },
        "update": {
          "x": { "offset": 330 },
          "y": { "offset": -220 },
          "width": { "value": 322 },
          "height": { "value": 102 },
          "opacity": { "value": 1 },
          "cornerRadius": { "signal": "cornerRadius" },
          "strokeWidth": { "value": 2 },
          "fillOpacity": {
            "signal": "color === 'fill' || color === 'both' ? 1 : 0"
          },
          "strokeOpacity": {
            "signal": "color === 'stroke' || color === 'both' ? 1 : 0"
          }
        },
        "hover": {
          "opacity": { "value": 0.5 }
        }
      }
    },
    {
      "type": "rect",
      "encode": {
        "enter": {
          "fill": { "value": "white" },

{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "padding": { "left": 0, "top": 0, "bottom": 0 },
  "autosize": "pad",
  "signals": [
    {
      "name": "clear",
      "value": true,
      "on": [
        {
          "events": "pointerup[!event.item]",
          "update": "true",
          "force": true
        }
      ]
    },
    {
      "name": "shift",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click, @bubble:click",
          "update": "event.shiftKey",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": null,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click, @bubble:click",
          "update": "{value: datum.country}",
          "force": true
        }
      ]
    }
  ],
  "data": [
    {
      "name": "table",
      "url": "https://raw.githubusercontent.com/ChinBoon22/FIT3179_Homework/main/Dataset/aggregated_weather.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "selected",
      "on": [
        { "trigger": "clear", "remove": true },
        { "trigger": "!shift", "remove": true },
        { "trigger": "!shift && clicked", "insert": "clicked" },
        { "trigger": "shift && clicked", "toggle": "clicked" }
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": [80, 8000]
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": ["#FAD5A5", "#FFA500", "#F08000", "#FF7518", "#8B4000"]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Carbon Monoxide Level",
      "encode": {
        "symbols": {
          "name": "legendSymbol",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1.0
              },
              { "value": 0.15 }
            ]
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "opacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.air_quality_Carbon_Monoxide)",
                "value": 1
              },
              { "value": 0.25 }
            ]
          }
        }
      },
      "orient": "top-right",
      "titlePadding": 10,
      "offset": -80
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "name": "bubble",
      "update": {
        "opacity": [
          {
            "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
            "value": 1.0
          },
          { "value": 0.15 }
        ]
      },
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "x": {
            "field": "x"
          },
          "y": {
            "field": "y"
          },
          "tooltip": {
            "signal": "{'Country': datum.country, 'Carbon Monoxide Level': datum.air_quality_Carbon_Monoxide}"
          }
        },
        "update": {
          "size": {
            "field": "air_quality_Carbon_Monoxide",
            "scale": "size"
          },
          "fill": {
            "field": "air_quality_Carbon_Monoxide",
            "scale": "color"
          },
          "stroke": {
            "value": "white"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {
              "force": "collide",
              "radius": {
                "expr": "sqrt(datum.size) / 2"
              }
            }
          ]
        }
      ]
    }
  ]
}

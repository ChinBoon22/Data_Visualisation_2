{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Cloud Cover, Humidity, and Precipitation by Country",
  "data": { "url": "../Dataset/aggregated_weather.csv" },
  "width": 400,
  "height": 400,
  "title": {
    "text": "Humidity, Cloud Cover and Precipitation Across Continents",
    "fontSize": 15
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": {
        "type": "circle",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "humidity",
          "type": "quantitative",
          "title": "Humidity (%)"
        },
        "y": {
          "field": "cloud",
          "type": "quantitative",
          "title": "Cloud Cover (%)"
        },
        "size": {
          "field": "precip_mm",
          "type": "quantitative",
          "title": "Precipitation (mm)",
          "scale": {
            "type": "threshold",
            "domain": [0.2, 1.0, 1.5, 2.5],
            "range": [100, 400, 900, 1400, 2000]
          }
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "title": "Continent",
          "scale": {
            "domain": [
              "Africa",
              "America",
              "Asia",
              "Atlantic",
              "Australia",
              "Europe",
              "Indian",
              "Pacific"
            ],
            "range": [
              "#988558",
              "#7D3C98",
              "#e41a1c",
              "#54b8b8",
              "#37474F",
              "#0F52BA",
              "#922B21",
              "#FF69B4"
            ]
          }
        },
        "opacity": {
          "condition": { "selection": "continent_highlight", "value": 0.58 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "country", "type": "nominal", "title": "Country" },
          { "field": "continent", "type": "nominal", "title": "Continent" },
          {
            "field": "humidity",
            "type": "quantitative",
            "title": "Humidity (%)"
          },
          {
            "field": "cloud",
            "type": "quantitative",
            "title": "Cloud Cover (%)"
          },
          {
            "field": "precip_mm",
            "type": "quantitative",
            "title": "Precipitation (mm)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": -123,
        "dy": 65,
        "fontSize": 11
      },
      "encoding": {
        "text": { "value": "During summer,  " },
        "color": { "value": "black" },

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Heatmap",
  "data": {
    "url": "../Dataset/6_top_20_ozone_country.csv"
  },
  "width": 600,
  "height": 300,
  "title": "Air Quality Ozone for",
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "last_updated_day",
      "type": "temporal",
      "title": "Date",
      "axis": {
        "labelAngle": 0,
        "format": "%d/%m/%Y"
      },
      "scale": {
        "domain": ["29/08/2023", "08/09/2023"]
      }
    },
    "y": {
      "field": "country",
      "type": "ordinal",
      "title": "Country"
    },
    "color": {
      "field": "air_quality_Ozone",
      "aggregate": "mean",
      "type": "quantitative",
      "legend": {
        "title": "Air Quality Ozone"
      }
    }
  }
}

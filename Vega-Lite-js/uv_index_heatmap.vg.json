{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Heatmap",
  "data": {
    "url": "../Dataset/6_top_20_ozone_country.csv"
  },
  "width": 600,
  "height": 300,
  "title": "Top 20 Countries with Highest UV Index",
  "mark": "rect",
  "encoding": {
    "x": {
      "field": "last_updated_day",
      "type": "ordinal",
      "title": "Date",
      "timeUnit": "binnedutcyearmonthdate"
    },
    "y": {
      "field": "country",
      "type": "ordinal",
      "title": "Country"
    },
    "color": {
      "field": "uv_index",
      "type": "quantitative",
      "legend": {
        "title": "UV Index"
      },
      "scale": {
        "range": ["#7c3f00", "#633200", "#562b00", "#492201", "#3e1c00"]
      }
    }
  }
}

{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A Dorling cartogram depicting Global Carbon Monoxide Level.",
  "width": 900,
  "height": 520,
  "autosize": "none",

  "config": {
    "legend": {
      "gradientDirection": "horizontal",
      "gradientLength": 120,
      "gradientThickness": 10
    }
  },

  "data": [
    {
      "name": "countries",
      "url": "https://raw.githubusercontent.com/ChinBoon22/FIT3179_Homework/main/Dataset/ne_110m.json",
      "format": { "type": "topojson", "feature": "ne_110m_admin_0_countries" }
    },
    {
      "name": "table",
      "url": "data/obesity.json",
      "transform": [
        {
          "type": "lookup",
          "from": "countries",
          "key": "id",
          "fields": ["id"],
          "as": ["geo"]
        },
        {
          "type": "filter",
          "expr": "datum.geo"
        },
        {
          "type": "formula",
          "as": "centroid",
          "expr": "geoCentroid('projection', datum.geo)"
        }
      ]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "albersUsa",
      "scale": 1100,
      "translate": [{ "signal": "width / 2" }, { "signal": "height / 2" }]
    }
  ],

  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": [80, 8000]
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {
        "data": "table",
        "field": "air_quality_Carbon_Monoxide"
      },
      "range": ["#FAD5A5", "#FFA500", "#F08000", "#FF7518", "#8B4000"]
    }
  ],

  "legends": [
    {
      "title": "% of Obese Adults",
      "orient": "bottom-right",
      "type": "symbol",
      "size": "size",
      "fill": "color",
      "format": ".1%",
      "clipHeight": 16
    }
  ],

  "marks": [
    {
      "name": "circles",
      "type": "symbol",
      "from": { "data": "table" },
      "encode": {
        "enter": {
          "size": { "scale": "size", "field": "rate" },
          "fill": { "scale": "color", "field": "rate" },
          "stroke": { "value": "white" },
          "strokeWidth": { "value": 1.5 },
          "x": { "field": "centroid[0]" },
          "y": { "field": "centroid[1]" },
          "tooltip": {
            "signal": "'Obesity Rate: ' + format(datum.rate, '.1%')"
          }
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {
              "force": "collide",
              "radius": { "expr": "1 + sqrt(datum.size) / 2" }
            },
            { "force": "x", "x": "datum.centroid[0]" },
            { "force": "y", "y": "datum.centroid[1]" }
          ]
        }
      ]
    },
    {
      "type": "text",
      "interactive": false,
      "from": { "data": "circles" },
      "encode": {
        "enter": {
          "align": { "value": "center" },
          "baseline": { "value": "middle" },
          "fontSize": { "value": 13 },
          "fontWeight": { "value": "bold" },
          "text": { "field": "datum.country" }
        },
        "update": {
          "x": { "field": "x" },
          "y": { "field": "y" }
        }
      }
    }
  ]
}

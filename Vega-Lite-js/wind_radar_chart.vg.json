{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "A radar chart example, showing multiple dimensions in a radial layout.",
  "width": 500,
  "height": 500,
  "padding": { "bottom": 0, "top": -200, "left": -230, "right": 200 },
  "signals": [
    { "name": "radius", "update": "width / 2 - 20" },
    {
      "name": "tooltip",
      "value": {},
      "on": [
        {
          "events": "@category-point:mouseover",
          "update": "datum"
        },
        {
          "events": "@category-point:mouseout",
          "update": "{}"
        }
      ]
    },
    {
      "name": "clear",
      "value": true,
      "on": [
        {
          "events": "mouseup[!event.item]",
          "update": "true",
          "force": true
        }
      ]
    },
    {
      "name": "shift",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "event.shiftKey",
          "force": true
        }
      ]
    },
    {
      "name": "clicked",
      "value": { "value": null, "counter": 0, "clicked": false },
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click",
          "update": "!(clicked.counter >1) && clicked.clicked!==true?{value: datum.value, counter:datum.value===clicked.value ?clicked.counter+1:1, clicked:clicked.counter%2===0||datum.value!==clicked.value? true:false}:false",
          "force": false
        }
      ]
    },
    {
      "name": "clickedEvent",
      "value": false,
      "on": [
        {
          "events": "@legendSymbol:click, @legendLabel:click,mouseup[!event.item]",
          "update": "!clickedEvent"
        }
      ]
    }
  ],

  "data": [
    {
      "name": "table",
      "url": "../Dataset/2_wind_data.csv",
      "format": {
        "type": "csv"
      }
    },
    {
      "name": "keys",
      "source": "table",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["wind_direction"]
        }
      ]
    },
    {
      "name": "selected",
      "on": [
        {
          "trigger": "clear",
          "remove": true
        },
        {
          "trigger": "!shift",
          "remove": true
        },
        {
          "trigger": "!shift && clicked",
          "insert": "clicked"
        },
        {
          "trigger": "shift && clicked",
          "toggle": "clicked"
        }
      ]
    }
  ],
  "legends": [
    {
      "fill": "color",
      "title": "Continents",
      "orient": "none",
      "legendX": 230,
      "legendY": -190,
      "direction": "vertical",
      "aria": true,
      "description": "Continents",
      "labelColor": { "value": "color" },
      "encode": {
        "gradient": {
          "name": "legendgr",
          "interactive": true,
          "gradientLength": { "value": 30 },
          "gradientThickness": { "value": 10 },
          "update": {
            "gradientStrokeColor": {
              "value": "color"
            },
            "gradientStrokeWidth": {
              "value": 20
            },
            "gradientOpacity": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": 1
              }
            ]
          }
        },
        "labels": {
          "name": "legendLabel",
          "interactive": true,
          "update": {
            "labelColor": [
              {
                "test": "!length(data('selected')) || indata('selected', 'value', datum.value)",
                "value": "color"
              },
              {
                "fill": "black"
              }
            ],
            "rect": { "width": 40, "height": 30 },
            "text": {
              "field": "value"
            },
            "opacity": [
              {
                "test": "indata('selected', 'value', datum.value)",
                "value": 1
              },
              {
                "value": 1
              }
            ]
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "angular",
      "type": "point",
      "range": { "signal": "[-PI, PI]" },
      "padding": 0.5,
      "domain": { "data": "table", "field": "wind_direction" }
    },
    {
      "name": "radial",
      "type": "linear",
      "range": { "signal": "[0, radius]" },
      "zero": true,
      "nice": false,
      "domain": { "data": "table", "field": "wind_mph" },
      "domainMin": 0
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": { "data": "table", "field": "continent" },
      "range": [
        "#e41a1c",
        "#7D3C98",
        "#F57C00",
        "#D4AC0D",
        "#37474F",
        "#377eb8",
        "#922B21",
        "#FF69B4"
      ]
    }
  ],

  "encode": {
    "enter": {
      "x": { "signal": "radius" },
      "y": { "signal": "radius" }
    }
  },

  "marks": [
    {
      "type": "group",
      "name": "categories",
      "zindex": 1,
      "from": {
        "facet": { "data": "table", "name": "facet", "groupby": ["continent"] }
      },
      "marks": [
        {
          "type": "line",
          "name": "category-line",
          "from": { "data": "facet" },
          "encode": {
            "update": {
              "interpolate": { "value": "linear-closed" },
              "x": {
                "signal": "scale('radial', datum.wind_mph) * cos(scale('angular', datum.wind_direction) + (PI/7.8))"
              },
              "y": {
                "signal": "scale('radial', datum.wind_mph) * sin(scale('angular', datum.wind_direction) + (PI/7.8))"
              },
              "stroke": { "scale": "color", "field": "continent" },
              "strokeWidth": [
                {
                  "test": "(!length(data('selected')) || (indata('selected', 'value', null)) || (indata('selected', 'value', datum.continent)))",
                  "value": 1
                },
                {
                  "value": 0
                }
              ],
              "fill": { "scale": "color", "field": "continent" },
              "fillOpacity": [
                {
                  "test": "((indata('selected', 'value', datum.continent)))",
                  "value": 0.6
                },
                {
                  "value": 0.1
                }
              ]
            }
          }
        },
        {
          "type": "symbol",
          "name": "category-point",
          "from": {
            "data": "facet"
          },
          "encode": {
            "enter": {
              "x": {
                "signal": "scale('radial', datum.wind_mph) * cos(scale('angular', datum.wind_direction) + (PI/7.8))"
              },
              "y": {
                "signal": "scale('radial', datum.wind_mph) * sin(scale('angular', datum.wind_direction) + (PI/7.8))"
              },
              "tooltip": {
                "signal": "{'Continent: ': datum.continent, 'Wind Speed (mph): ': datum.wind_mph, 'Direction: ': datum.wind_direction}"
              },
              "fill": {
                "scale": "color",
                "field": "continent"
              },
              "fillOpacity": {
                "value": 0
              },
              "zindex": {
                "value": 1
              }
            }
          },
          "update": {
            "x": {
              "signal": "scale('radial', datum.wind_mph) * cos(scale('angular', datum.wind_direction) + (PI/7.8))"
            },
            "y": {
              "signal": "scale('radial', datum.wind_mph) * sin(scale('angular', datum.wind_direction) + (PI/7.8))"
            },
            "align": {
              "value": "center"
            },
            "baseline": {
              "value": "middle"
            },
            "zindex": {
              "value": 2
            },
            "fillOpacity": [
              {
                "test": "datum === tooltip",
                "value": 0
              },
              {
                "value": 1
              }
            ]
          }
        }
      ]
    },
    {
      "type": "rule",
      "name": "radial-grid",
      "from": { "data": "keys" },
      "zindex": 0,
      "encode": {
        "enter": {
          "x": { "value": 0 },
          "y": { "value": 0 },
          "x2": {
            "signal": "radius * cos(scale('angular', datum.wind_direction) + (PI/7.8))"
          },
          "y2": {
            "signal": "radius * sin(scale('angular', datum.wind_direction) + (PI/7.8))"
          },
          "stroke": { "value": "lightgray" },
          "strokeWidth": { "value": 1 }
        }
      }
    },
    {
      "type": "text",
      "name": "key-label",
      "from": { "data": "keys" },
      "zindex": 1,
      "encode": {
        "enter": {
          "x": {
            "signal": "(radius + 5) * cos(scale('angular', datum.wind_direction) + (PI/7.4))"
          },
          "y": {
            "signal": "(radius + 5) * sin(scale('angular', datum.wind_direction) + (PI/7.4))"
          },
          "text": { "field": "wind_direction" },
          "align": [
            {
              "test": "abs(scale('angular', datum.wind_direction)) > PI / 2",
              "value": "right"
            },
            {
              "value": "left"
            }
          ],
          "baseline": [
            {
              "test": "scale('angular', datum.wind_direction) > 0",
              "value": "top"
            },
            {
              "test": "scale('angular', datum.wind_direction) == 0",
              "value": "middle"
            },
            {
              "value": "bottom"
            }
          ],
          "fill": { "value": "black" },
          "fontWeight": { "value": "bold" }
        }
      }
    },
    {
      "type": "line",
      "name": "outer-line",
      "from": { "data": "radial-grid" },
      "encode": {
        "enter": {
          "interpolate": { "value": "linear-closed" },
          "x": { "field": "x2" },
          "y": { "field": "y2" },
          "stroke": { "value": "lightgray" },
          "strokeWidth": { "value": 1 }
        }
      }
    },
    {
      "type": "text",
      "interactive": false,
      "encode": {
        "enter": {
          "x": { "offset": 20 },
          "y": { "value": -270 },
          "fill": { "value": "black" },
          "fontSize": { "value": 14 },
          "fontWeight": { "value": "bold" },
          "align": { "value": "center" },
          "text": { "value": "Global Wind Speed against Direction" }
        }
      }
    }
  ]
}

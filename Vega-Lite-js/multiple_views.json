                "label": "Algeria"
              },
              {
                "country": "Canada",
                "latitude": 60.42,
                "longitude": -125.7,
                "label": "Canada"
              },
              {
                "country": "Madagascar",
                "latitude": -20,
                "longitude": 43.49,
                "label": "Madagascar"
              }
            ]
          },
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 0,
            "dy": 13,
            "fontSize": 11,
            "fill": "white"
          },
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "text": { "field": "label", "type": "nominal" }
          }
        },
        {
          "data": {
            "values": [
              {
                "value": "Brazil",
                "latitude": -40.08,
                "longitude": -130.17,
                "label": "In spring, days become longer in Brazil."
              },
              {
                "country": "Australia",
                "latitude": -35.28,
                "longitude": 80.22,
                "label": "Inland areas in Australia"
              },
              {
                "country": "Australia2",
                "latitude": -40.28,
                "longitude": 80.22,
                "label": " experience cold air masses."
              },
              {
                "country": "USA",
                "latitude": 25.6,
                "longitude": -179.49,
                "label": "At the end of August, "
              },
              {
                "country": "USA2",
                "latitude": 20.6,
                "longitude": -179.49,
                "label": "USA transitions to autumn (cooler). "
              }
            ]
          },
          "mark": {
            "type": "text",
            "align": "left",
            "baseline": "middle",
            "dx": 0,
            "dy": 13,
            "fontSize": 10,
            "fill": "black"
          },
          "encoding": {
            "longitude": { "field": "longitude", "type": "quantitative" },
            "latitude": { "field": "latitude", "type": "quantitative" },
            "text": { "field": "label", "type": "nominal" }
          }
        }
      ]
    },

    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["continent"],
          "bind": "legend"
        }
      },
      "mark": {
        "type": "circle",
        "filled": true
      },
      "encoding": {
        "x": {
          "field": "humidity",
          "type": "quantitative",
          "title": "Humidity (%)"
        },
        "y": {
          "field": "cloud",
          "type": "quantitative",
          "title": "Cloud Cover (%)"
        },
        "size": {
          "field": "precip_mm",
          "type": "quantitative",
          "title": "Precipitation (mm)",
          "scale": { "range": [100, 2000] }
        },
        "color": {
          "field": "continent",
          "type": "nominal",
          "title": "Continent",
          "scale": {
            "domain": [
              "Africa",
              "America",
              "Asia",
              "Atlantic",
              "Australia",
              "Europe",
              "Indian",
              "Pacific"
            ],
            "range": [
              "#e41a1c",
              "#7D3C98",
              "#F57C00",
              "#D4AC0D",
              "#37474F",
              "#377eb8",
              "#922B21",
              "#FF69B4"
            ]
          }
        },
        "opacity": {
          "condition": { "selection": "continent_highlight", "value": 0.55 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "country", "type": "nominal", "title": "Country" },
          { "field": "continent", "type": "nominal", "title": "Continent" },
          {
            "field": "humidity",
            "type": "quantitative",
            "title": "Humidity (%)"
          },
          {
            "field": "cloud",
            "type": "quantitative",
            "title": "Cloud Cover (%)"
          },
          {
            "field": "precip_mm",
            "type": "quantitative",
            "title": "Precipitation (mm)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "dx": -30,
        "dy": 45,
        "fontSize": 11
      },
      "encoding": {
        "text": { "field": "country", "type": "nominal" },

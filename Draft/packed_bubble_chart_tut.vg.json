{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "width": 400,
  "height": 400,
  "padding": 115,
  "data": [
    {
      "name": "table",
      "url": "../Dataset/aggregated_weather.csv"
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "linear",
      "domain": {
        "data": "table",
        "field": "temperature_celsius"
      },
      "range": [100, 5000]
    }
  ],
  "marks": [
    {
      "type": "symbol",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "fill": {
            "value": "steelblue"
          },
          "tooltip": {
            "field": "continent"
          }
        },
        "update": {
          "size": {
            "field": "gust_mph",
            "scale": "size"
          },
          "stroke": {
            "value": "white"
          },
          "strokeWidth": {
            "value": 1
          }
        }
      },
      "transform": [
        {
          "type": "force",
          "static": true,
          "forces": [
            {
              "force": "collide",
              "radius": {
                "expr": "sqrt(datum.size)"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "text",
      "from": {
        "data": "table"
      },
      "encode": {
        "enter": {
          "align": {
            "value": "center"
          },
          "baseline": {
            "value": "middle"
          },
          "fontSize": {
            "value": 15
          },
          "fontWeight": {
            "value": "bold"
          },
          "fill": {
            "value": "white"
          },
          "text": {
            "field": "continent"
          }
        }
      }
    }
  ]
}

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "data": {
    "url": "../Dataset/aggregated_data_for_stream_graph.csv"
  },
  "mark": "area",
  "params": [
    {
      "name": "continent",
      "select": { "type": "point", "fields": ["continent"] },
      "bind": "legend"
    }
  ],
  "encoding": {
    "x": {
      "timeUnit": "monthdate",
      "field": "last_updated_day",
      "type": "ordinal",
      "axis": {
        "domain": false,
        "format": "%d/%m",
        "tickSize": 0
      }
    },
    "y": {
      "aggregate": "average",
      "field": "gust_mph",
      "axis": null,
      "stack": "center"
    },
    "color": { "field": "continent", "scale": { "scheme": "category20b" } },
    "opacity": {
      "condition": { "param": "continent", "value": 1 },
      "value": 0.2
    }
  }
}
